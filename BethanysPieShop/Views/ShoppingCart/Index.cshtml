@model ShoppingCartViewModel
   <br> <br />
        <h2>Ваш кошик для покупок</h2>
        <h4></h4>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Кількість</th>
            <th>Десерт</th>
            <th class="text-right">Ціна</th>
            <th class="text-right">Загальна</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-center">@line.Amount</td>
                <td class="text-left">@line.Pie.Name</td>
                <td class="text-right">@line.Pie.Price.ToString("c")</td>
                <td class="text-right">
                    @((line.Amount * line.Pie.Price).ToString("c"))
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Загалом:</td>
            <td class="text-right">
                @Model.ShoppingCartTotal.ToString("c")
            </td>
        </tr>
    </tfoot>
</table>


<div class="text-center">
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Продовжити!</a>
</div>

